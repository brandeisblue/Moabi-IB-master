<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="72dp"
    android:padding="8dp"
    android:gravity="center"
    android:background="#b1000000">

    <TextView
        android:id="@+id/mpchart_chartvalueselectedview_top_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:text="hello"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/mpchart_chartvalueselectedview_bottom_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mpchart_chartvalueselectedview_top_textview"
        android:singleLine="true"
        android:layout_centerHorizontal="true"
        android:text="hello"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>