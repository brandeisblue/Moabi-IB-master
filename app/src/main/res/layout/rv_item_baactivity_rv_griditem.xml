<?xml version="1.0" encoding="utf-8"?>
<com.ivorybridge.moabi.ui.views.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_item_baactivity_rv_griditem_squarelayout"
    android:layout_width="72dp"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/rv_item_baactivity_rv_griditem_imageview"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/ic_stopwatch" />

    <TextView
        android:id="@+id/rv_item_baactivity_rv_griditem_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxEms="4"
        android:maxLines="2"
        android:text="hello world"
        android:textSize="14sp" />
</com.ivorybridge.moabi.ui.views.SquareLayout>