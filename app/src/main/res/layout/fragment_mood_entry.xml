<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true">

    <LinearLayout
        android:id="@+id/fragment_mood_entry_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_mood_entry_prompt_textview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/survey_mood_and_energy_prompt"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/fragment_mood_entry_emoji_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

            <LinearLayout
                android:id="@+id/fragment_mood_entry_alert_linearlayout"
                android:layout_width="64dp"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragment_mood_entry_alert_imageview"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_emoji_alert" />

                <TextView
                    android:id="@+id/fragment_mood_entry_alert_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mood_alert"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_mood_entry_excited_linearlayout"
                android:layout_width="64dp"
                android:layout_height="72dp"
                android:layout_toRightOf="@id/fragment_mood_entry_alert_linearlayout"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragment_mood_entry_excited_imageview"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_emoji_excited" />

                <TextView
                    android:id="@+id/fragment_mood_entry_excited_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mood_excited"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_mood_entry_happy_linearlayout"
                android:layout_width="64dp"
                android:layout_height="72dp"
                android:layout_below="@id/fragment_mood_entry_excited_linearlayout"
                android:layout_toRightOf="@id/fragment_mood_entry_alert_linearlayout"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragment_mood_entry_happy_imageview"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_emoji_happy" />

                <TextView
                    android:id="@+id/fragment_mood_entry_happy_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mood_happy"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_mood_entry_okay_linearlayout"
                android:layout_width="64dp"
                android:layout_height="72dp"
                android:layout_below="@id/fragment_mood_entry_alert_linearlayout"
                android:layout_toLeftOf="@id/fragment_mood_entry_happy_linearlayout"
                android:layout_toRightOf="@id/fragment_mood_entry_unhappy_linearlayout"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragment_mood_entry_okay_imageview"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_emoji_okay" />

                <TextView
                    android:id="@+id/fragment_mood_entry_okay_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mood_okay"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_mood_entry_calm_linearlayout"
                android:layout_width="64dp"
                android:layout_height="72dp"
                android:layout_below="@id/fragment_mood_entry_happy_linearlayout"
                android:layout_toRightOf="@id/fragment_mood_entry_alert_linearlayout"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragment_mood_entry_calm_imageview"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_emoji_calm" />

                <TextView
                    android:id="@+id/fragment_mood_entry_calm_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mood_calm"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_mood_entry_tired_linearlayout"
                android:layout_width="64dp"
                android:layout_height="72dp"
                android:layout_below="@id/fragment_mood_entry_happy_linearlayout"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toLeftOf="@id/fragment_mood_entry_calm_linearlayout"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragment_mood_entry_tired_imageview"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_emoji_tired" />

                <TextView
                    android:id="@+id/fragment_mood_entry_tired_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mood_tired"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_mood_entry_bored_linearlayout"
                android:layout_width="64dp"
                android:layout_height="72dp"
                android:layout_below="@id/fragment_mood_entry_happy_linearlayout"
                android:layout_toLeftOf="@id/fragment_mood_entry_tired_linearlayout"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragment_mood_entry_bored_imageview"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_emoji_bored" />

                <TextView
                    android:id="@+id/fragment_mood_entry_bored_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mood_bored"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_mood_entry_unhappy_linearlayout"
                android:layout_width="64dp"
                android:layout_height="72dp"
                android:layout_above="@id/fragment_mood_entry_bored_linearlayout"
                android:layout_below="@id/fragment_mood_entry_tense_linearlayout"
                android:layout_toLeftOf="@id/fragment_mood_entry_alert_linearlayout"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragment_mood_entry_unhappy_imageview"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_emoji_sad" />

                <TextView
                    android:id="@+id/fragment_mood_entry_unhappy_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mood_unhappy"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_mood_entry_tense_linearlayout"
                android:layout_width="64dp"
                android:layout_height="72dp"
                android:layout_toLeftOf="@id/fragment_mood_entry_alert_linearlayout"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fragment_mood_entry_tense_imageview"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_emoji_angry" />

                <TextView
                    android:id="@+id/fragment_mood_entry_tense_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mood_tense"
                    android:textSize="14sp"
                    android:textColor="@color/black" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="36dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_mood_entry_expanded_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/fragment_mood_entry_expanded_imageview"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/fragment_mood_entry_expanded_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="28sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragment_mood_entry_submitbutton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:paddingStart="-16dp"
            android:paddingEnd="-16dp"
            android:textSize="14sp"
            android:text="@string/submit_title" />
    </LinearLayout>

</RelativeLayout>