<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rv_item_survey_question_item_question_title_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1.2"
        android:fontFamily="@font/source_sans_pro"
        android:gravity="center_vertical"
        android:text="1. Little Interst or pleasure in doing things?"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/transparent_gray"/>

    <TextView
        android:id="@+id/rv_item_survey_question_item_option1_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/gad7_option_1"
        android:clickable="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="16dp"
        android:textFontWeight="medium"
        android:focusable="true"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_weight="1.2"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="1dp"
        android:background="@color/transparent_gray"/>

    <TextView
        android:id="@+id/rv_item_survey_question_item_option2_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/gad7_option_2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:layout_weight="1.2"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="1dp"
        android:background="@color/transparent_gray"/>

    <TextView
        android:id="@+id/rv_item_survey_question_item_option3_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1.2"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/source_sans_pro"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="@string/gad7_option_3"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_height="1dp"
        android:background="@color/transparent_gray"/>

    <TextView
        android:id="@+id/rv_item_survey_question_item_option4_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1.2"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/source_sans_pro"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:text="@string/gad7_option_4"
        android:textColor="@color/black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/transparent_gray" />
</LinearLayout>